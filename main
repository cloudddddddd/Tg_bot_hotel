import telebot
from telebot import types
# –í–≤–æ–¥–∏–º —Å–≤–æ–π —Ç–æ–∫–µ–Ω
token = 'xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx'
# –°–æ–∑–¥–∞–µ–º –±–æ—Ç–∞ (–æ–±—ä–µ–∫—Ç)
tg_bot = telebot.TeleBot(token)

# –û–±—Ä–∞–±–æ—Ç–∫–∞ –∫–æ–º–∞–Ω–¥—ã /start
@tg_bot.message_handler(commands=['start'])
def start_func(message):
    # –°–æ–∑–¥–∞–Ω–∏–µ –∫–Ω–æ–ø–æ–∫ –ø–æ–¥ –∫–ª–∞–≤–∏–∞—Ç—É—Ä–æ–π
    murkup = types.ReplyKeyboardMarkup()
    button1 = types.KeyboardButton('–£–∑–Ω–∞—Ç—å –∞–¥—Ä–µ—Å')
    button2 = types.KeyboardButton('–£–∑–Ω–∞—Ç—å –Ω–æ–º–µ—Ä —Ç–µ–ª–µ—Ñ–æ–Ω–∞')
    button3 = types.KeyboardButton('–ì–∞–ª–µ—Ä–µ—è')
    button4 = types.KeyboardButton('–£–∑–Ω–∞—Ç—å —É—Å–ª—É–≥–∏ –∏ —Ü–µ–Ω—ã')
    # –†–∞–∑–º–µ—â–µ–Ω–∏–µ –∫–Ω–æ–ø–æ–∫ (2 –∫–Ω–æ–ø–∫–∏ –≤ 1 —Å—Ç—Ä–æ—á–∫—É)
    murkup.row(button1,button2)
    murkup.row(button3,button4)
    # –û—Ç–ø—Ä–∞–≤–∫–∞ —Å–æ–æ–±—â–µ–Ω–∏—è
    tg_bot.send_message(message.chat.id,
                        'üòÉ –ó–¥—Ä–∞–≤—Å—Ç–≤—É–π—Ç–µ! –≠—Ç–æ –∏–Ω—Ñ–æ—Ä–º–∞—Ü–∏–æ–Ω–Ω—ã–π –±–æ—Ç –æ—Ç–µ–ª—è ¬´Jager Hotel¬ª. –ò—Å–ø–æ–ª—å–∑—É–π—Ç–µ –∫–Ω–æ–ø–∫–∏ –ø–æ–¥ –∫–ª–∞–≤–∏–∞—Ç—É—Ä–æ–π, —á—Ç–æ–±—ã —É–∑–Ω–∞—Ç—å –∏–Ω—Ñ–æ—Ä–º–∞—Ü–∏—é.',
                        reply_markup=murkup)

# –û–±—Ä–∞–±–æ—Ç–∫–∞ –∫–æ–º–∞–Ω–¥—ã /help
@tg_bot.message_handler(commands=['help'])
def help_func(message):
    tg_bot.send_message(message.chat.id, '–ß—Ç–æ–±—ã –ø–æ–ª—å–∑–æ–≤–∞—Ç—å—Å—è –±–æ—Ç–æ–º –Ω–∞–¥–æ –∏—Å–ø–æ–ª—å–∑–æ–≤–∞—Ç—å –∫–Ω–æ–ø–∫–∏ –ø–æ–¥ –∫–ª–∞–≤–∏–∞—Ç—É—Ä–æ–π –∏–ª–∏ –Ω–∞–±–∏—Ä–∞—Ç—å —Ç–µ–∫—Å—Ç –≤—Ä—É—á–Ω—É—é.\n'
                                         '–ß—Ç–æ–±—ã —É–∑–Ω–∞—Ç—å –∏–Ω—Ñ–æ—Ä–º–∞—Ü–∏—é –Ω–∞–ø–∏—à–∏—Ç–µ: –£–∑–Ω–∞—Ç—å –Ω–æ–º–µ—Ä —Ç–µ–ª–µ—Ñ–æ–Ω–∞, –£–∑–Ω–∞—Ç—å –∞–¥—Ä–µ—Å, –ì–∞–ª–µ—Ä–µ—è, –£–∑–Ω–∞—Ç—å —É—Å–ª—É–≥–∏ –∏ —Ü–µ–Ω—ã.\n'
                                         '–ï—Å–ª–∏ –∫–Ω–æ–ø–∫–∏ –Ω–µ —Ä–∞–±–æ—Ç–∞—é—Ç: –ü–æ–ø—Ä–æ–±—É–π—Ç–µ –ø–µ—Ä–µ–∑–∞–ø—É—Å—Ç–∏—Ç—å –±–æ—Ç–∞. –î–ª—è —ç—Ç–æ–≥–æ: 1) –ü–µ—Ä–µ–π–¥–∏—Ç–µ –≤ –ø—Ä–æ—Ñ–∏–ª—å –±–æ—Ç–∞ (–Ω–∞–∂–º–∏—Ç–µ –Ω–∞ –∏–º—è –±–æ—Ç–∞ –≤ —á–∞—Ç–µ),'
                                         ' 2) –ù–∞–∂–º–∏—Ç–µ –Ω–∞ —Ç—Ä–æ–µ—Ç–æ—á–∏–µ –≤ –ø—Ä–∞–≤–æ–º –≤–µ—Ä—Ö–Ω–µ–º —É–≥–ª—É, 3) –ù–∞–∂–º–∏—Ç–µ –Ω–∞: —É–¥–∞–ª–∏—Ç—å(–æ—Å—Ç–∞–Ω–æ–≤–∏—Ç—å) –∏ –∑–∞–±–ª–æ–∫–∏—Ä–æ–≤–∞—Ç—å, 4) –ó–∞–Ω–æ–≤–æ –∑–∞–ø—É—Å—Ç–∏—Ç–µ –±–æ—Ç–∞\n'
                                         '–ï—Å–ª–∏ –±–æ—Ç –Ω–µ —Ä–∞–±–æ—Ç–∞–µ—Ç –ø–æ—Å–ª–µ –ø–µ—Ä–µ–∑–∞–ø—É—Å–∫–∞, —Ç–æ –≤–æ–∑–º–æ–∂–Ω–æ –µ–≥–æ —Ä–∞–±–æ—Ç–∞ –ø—Ä–∏–æ—Å—Ç–æ–Ω–æ–≤–ª–µ–Ω–∞.\n'
                                         '–ù–∞–¥–µ—é—Å—å –º—ã —Å–º–æ–≥–ª–∏ –≤–∞–º –ø–æ–º–æ—á—å!ü§ñ')

# –û–±—Ä–∞–±–æ—Ç–∫–∞ —Ç–µ–∫—Å—Ç–æ–≤—ã—Ö —Å–æ–æ–±—â–µ–Ω–∏–π –æ—Ç –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è
@tg_bot.message_handler()
def handler(message):
    if message.text.lower() == '—É–∑–Ω–∞—Ç—å –∞–¥—Ä–µ—Å':
        tg_bot.send_message(message.chat.id, 'üìç–ê–¥—Ä–µ—Å:\n—Å—Ç—Ä–∞–Ω–∞: –ù–∏–¥–µ—Ä–ª–∞–Ω–¥—ã, –≥–æ—Ä–æ–¥: –ê–º—Å—Ç–µ—Ä–¥–∞–º, —Ä–∞–π–æ–Ω: –¶–µ–Ω—Ç—Ä, –¥–æ–º: ‚Ññ5.')

    elif message.text.lower() == '—É–∑–Ω–∞—Ç—å –Ω–æ–º–µ—Ä —Ç–µ–ª–µ—Ñ–æ–Ω–∞':
        tg_bot.send_message(message.chat.id, '+31-145-65-23')

    elif message.text.lower() == '–≥–∞–ª–µ—Ä–µ—è':
        # –û—Ç–∫—Ä—ã—Ç–∏–µ –∏ –æ—Ç–ø—Ä–∞–≤–ª–Ω–∏–µ –∏–∑–æ–±—Ä–∞–∂–µ–Ω–∏–π
        with open('photo/house.jpg', 'rb') as file:
            tg_bot.send_photo(message.chat.id, file)
        with open('photo/bedroom.jpg', 'rb') as file:
            tg_bot.send_photo(message.chat.id, file)
        with open('photo/restaurant.jpg', 'rb') as file:
            tg_bot.send_photo(message.chat.id, file)
        with open('photo/bar.jpg', 'rb') as file:
            tg_bot.send_photo(message.chat.id, file)
        with open('photo/hookah.jpg', 'rb') as file:
            tg_bot.send_photo(message.chat.id, file)

    elif message.text.lower() == '—É–∑–Ω–∞—Ç—å —É—Å–ª—É–≥–∏ –∏ —Ü–µ–Ω—ã':
        tg_bot.send_message(message.chat.id, 'üõè –°—Ç–∞–Ω–¥–∞—Ä—Ç–Ω—ã–π –Ω–æ–º–µ—Ä: –¶–µ–Ω–∞ 88,00 ‚Ç¨ –∑–∞ –Ω–æ—á—å. –¢—É–∞–ª–µ—Ç, –¥—É—à. –ë–µ—Å–ø–ª–∞—Ç–Ω—ã–π –∑–∞–≤—Ç—Ä–∞–∫.\n'
                                             'üëë –õ—é–∫—Å –Ω–æ–º–µ—Ä: –¶–µ–Ω–∞ 122,00 ‚Ç¨ –∑–∞ –Ω–æ—á—å. –¢—É–∞–ª–µ—Ç, –≤–∞–Ω–Ω–∞—è, –æ—Ñ–∏—Å. –ë–µ—Å–ø–ª–∞—Ç–Ω–æ–µ —Ç—Ä—ë—Ö —Ä–∞–∑–æ–≤–æ–µ –ø–∏—Ç–∞–Ω–∏–µ ')
    # –ï—Å–ª–∏ —Å–æ–æ–±—â–µ–Ω–∏–µ –Ω–µ —Ä–∞—Å–ø–æ–∑–Ω–∞–Ω–æ
    else:
        tg_bot.send_message(message.chat.id, '–ö —Å–æ–∂–∞–ª–µ–Ω–∏—é —è —Ç–µ–±—è –Ω–µ –ø–æ–Ω–∏–º–∞—é üòì. –ü–æ–ø—Ä–æ–±—É–π –≤–æ—Å–ø–æ–ª—å–∑–æ–≤–∞—Ç—å—Å—è –∫–Ω–æ–ø–∫–∞–º–∏ –ø–æ–¥ –∫–ª–∞–≤–∏–∞—Ç—É—Ä–æ–π!')

# *–ë–µ—Å–∫–æ–Ω–µ—á–Ω–∞—è* —Ä–∞–±–æ—Ç–∞ –±–æ—Ç–∞
tg_bot.polling(none_stop=True)
